<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"
    tools:context=".AdminTasksFragment">


    <Button
        android:id="@+id/accountConvertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/black"
        android:text="Approve Account Conversion"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/recentUploadButton"
        android:layout_width="323dp"
        android:layout_height="73dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/black"
        android:text="Check Recent Uploads"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountConvertButton" />

    <Button
        android:id="@+id/updateCategoriesButton"
        android:layout_width="323dp"
        android:layout_height="73dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/black"
        android:text="Update Categories"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recentUploadButton" />

    <Button
        android:id="@+id/updateDietsButton"
        android:layout_width="323dp"
        android:layout_height="73dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/black"
        android:text="Update Diets"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateCategoriesButton" />
</androidx.constraintlayout.widget.ConstraintLayout>